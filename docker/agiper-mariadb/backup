mysqld_safe &
mysqld_pid=$! &
mysqladmin --silent --wait=30 ping || exit 1
mysql -e "GRANT ALL ON *.* TO root@'%' IDENTIFIED BY '' WITH GRANT OPTION"
mysql -e "CREATE USER rolene IDENTIFIED BY 'rolene';"
mysql -e "GRANT PROCESS ON *.* to rolene;"
mysqladmin shutdown
wait $mysqld_pid
tar czvf setup.tar.gz /var/lib/mysql
