sed -i 's/^\(bind-address\s.*\)/# \1/' /etc/mysql/my.cnf
mysqld_safe &
mysqld_pid=$! &
mysqladmin --silent --wait=30 ping || exit 1
mysql -e "GRANT ALL ON *.* TO root@'%' IDENTIFIED BY '' WITH GRANT OPTION"
mysql -e "CREATE DATABASE teamcity COLLATE utf8_bin;"
mysql -e "CREATE USER teamcity IDENTIFIED BY 'teamcity';"
mysql -e "GRANT ALL PRIVILEGES ON teamcity.* TO teamcity;"
mysql -e "GRANT PROCESS ON *.* to teamcity;"
mysqladmin shutdown
wait $mysqld_pid
tar czvf setup.tar.gz /var/lib/mysql