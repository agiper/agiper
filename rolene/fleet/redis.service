[Unit]
Description=Redis Service

Requires=redis-discovery.service
Before=redis-discovery.service
After=docker.service

[Service]
KillMode=none
Restart=always
TimeoutStartSec=0
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/docker rm -f redis
ExecStartPre=/usr/bin/docker pull quay.io/rolene/redis
ExecStart=/usr/bin/docker run -p 6379:6379 --name redis quay.io/rolene/redis
ExecStop=/usr/bin/docker stop redis

[X-Fleet]
Conflicts=redis.service
